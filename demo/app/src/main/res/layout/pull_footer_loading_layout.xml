<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/tv_no_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/loading_no_more"
        android:gravity="center"
        android:textColor="@color/c10"
        android:textSize="@dimen/ts_14px"
        android:visibility="gone"
        tools:ignore="SpUsage"/>

    <LinearLayout
        android:id="@+id/footer_pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/footer_iv_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@null"
            android:src="@drawable/splash_dot"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/footer_iv_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:src="@drawable/splash_dot"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/footer_iv_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@null"
            android:src="@drawable/splash_dot"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>